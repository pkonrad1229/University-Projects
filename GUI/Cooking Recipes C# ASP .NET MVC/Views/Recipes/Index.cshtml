@model Lab2.Models.RecipesList
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@


<br />
<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-secondary">Recipe List</h2>
    </div>
    <div class="col-3">
        <a asp-action="Upsert" class="btn btn-info form-control text-white">Create New Recipe</a>
    </div>


    <div class="col-lg-12 p-3 mt-3">
        <form method="post">
            @if (Model.List.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th style="width:  85%">
                            <label>Recipe</label>
                        </th>
                        
                        
                        <th style="width:  15%">

                        </th>
                    </tr>
                    @foreach (var item in Model.List)
                    {
                        <tr>
                            <td style="width:  85%">
                                @item.Name
                            </td>
                            
                            
                            <td style="width:  15%">
                                <button asp-action="Remove" asp-route-itemid="@item.IdNumber" onclick="return confirm('Are you sure you want to delete?')" class="btn btn-danger btn-sm">Delete</button>
                                <a asp-action="Upsert" asp-route-itemid="@item.IdNumber" class="btn btn-success btn-sm text-white">Edit</a>
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <p>No recipes available.</p>
            }
        </form>
    </div>

    
</div>
