@model Lab2.Models.Recipe
@{
    ViewData["Title"] = "Recipe";
}


  <div class="list-group">
    @foreach (var ingredient in Model.IngredientName)
    {
        <a class="list-group-item list-group-item-action" asp-area="" asp-controller="Recipes" asp-action="Index">@ingredient</a>
    }
    </div>
<div class="form-group">
    <label for="exampleFormControlSelect2">Example multiple select</label>
    <select multiple class="form-control" id="exampleFormControlSelect2">
      @for(int i = 0; i<Model.IngredientName.Count;i++)
      {
        <option>@Model.IngredientName[i] @Model.IngredientQuantity[i] @Model.IngredientUnit[i]</option>
      }
    
    </select>
  </div>